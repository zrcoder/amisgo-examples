{
    "title": {
      "text": "Polar Coordinate Bar Chart Example",
      "left": "center",
      "textStyle": {
        "color": "#aaa"
      },
      "padding": 0
    },
    "tooltip": {
      "trigger": "item",
      "formatter": "{b}: {c}",
      "backgroundColor": "#333",
      "borderColor": "#777",
      "borderWidth": 1,
      "textStyle": {
        "color": "#fff"
      }
    },
    "legend": {
      "data": [
        "Series 1",
        "Series 2"
      ],
      "bottom": 0,
      "left": "center",
      "textStyle": {
        "color": "#fff"
      }
    },
    "polar": [
      {
        "radius": "80%",
        "center": [
          "50%",
          "50%"
        ]
      }
    ],
    "angleAxis": {
      "type": "category",
      "data": [
        "A",
        "B",
        "C",
        "D",
        "E",
        "F"
      ],
      "z": 10,
      "axisLabel": {
        "color": "#ccc",
        "fontSize": 14
      }
    },
    "radiusAxis": {
      "min": 0,
      "max": 100,
      "interval": 20,
      "axisLabel": {
        "formatter": "{value}%",
        "color": "#ccc",
        "fontSize": 14
      }
    },
    "series": [
      {
        "name": "Series 1",
        "type": "bar",
        "data": [
          20,
          30,
          40,
          50,
          60,
          70
        ],
        "coordinateSystem": "polar",
        "color": "#ff7f50",
        "itemStyle": {
          "borderRadius": 5
        }
      },
      {
        "name": "Series 2",
        "type": "bar",
        "data": [
          50,
          40,
          30,
          20,
          10,
          5
        ],
        "coordinateSystem": "polar",
        "color": "#87cefa",
        "itemStyle": {
          "borderRadius": 5
        }
      }
    ]
  }